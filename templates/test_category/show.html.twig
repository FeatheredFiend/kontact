{% extends 'base.html.twig' %}

{% block title %}Test Categories{% endblock %}

{% block body %}
<div class="">
  {% if app.user != null %}
  <div class="row">
    <div class="col-sm-12 col-lg-4">
      <br>
        <a href="{{ path('testcategory_create') }}"><button type="button" class="btn btn-primary btn-block nav-link">Create Test Category</button></a>
      <br>
      {{ knp_pagination_filter(pagination, {'a.name': 'Name','a.description': 'Description'}) }}
      <br>
      {{ knp_pagination_render(pagination, null, {}, {
        'align': 'center',
        'size': 'large',
        'rounded': true,
      }) }}
    </div>
    <div class="col-sm-12 col-lg-8 table-responsive">
    <br>
      <table class="table table-striped table-light">
        <thead>
          <tr>
            <th>Test Category ID</th>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody name="testcategoryTable" id="testcategoryTable">
          {% for testcategory in pagination %}
          {% set id = testcategory.id %}
          <tr>
            <td><a class="nav-link" href="{{ path('testcategory_edit', {'id': testcategory.id}) }}">{{ testcategory.id}}</a></td>
            <td>{{ testcategory.name }}</td>           
            <td>{{ testcategory.description }}</td> 
          </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
  {% endif %}
</div>
{% endblock %}
