<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card bg-light mb-3 mt-3">
                <div class="card-body">
                    {% if app.user != null %}
                    <div class="container">
                        <div class="row">
                            <div class="card col-sm-12 col-md-6" style="width: 18rem;">
                                <div class="card-body">
                                    <a href="{{ path('contacthistory_show') }}"><h2 class="card-title text-center pt-5">Contact History</h2></a>
                                </div>
                            </div>
                            <div class="card col-sm-12 col-md-6" style="width: 18rem;">
                                <div class="card-body">
                                    <a href="{{ path('infectedlocation_show') }}"><h2 class="card-title text-center pt-5">Infected Locations</h2></a>
                                </div>
                            </div>
                        </div>
                    </div>          
                    {% endif %}
