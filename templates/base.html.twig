{# templates/base.html.twig #}
<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome! to Kontact{% endblock %}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
{% block stylesheets %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    select {width:33%}
    .image {
        object-fit: contain;
        width: 100%;
        height: 40px;
    }
  </style>
{% endblock %}
  </head>
  <body>
<nav class="navbar navbar-expand-md navbar-light sticky-top bg-light">
  <a class="navbar-brand" href="{{ path('homepage') }}">Kontact</a>
  <ul class="nav navbar-nav justify-content-center mx-auto">
    <li><a class="nav-link">{% if app.user %} {{ app.user}} {% endif %}</a></li>
  </ul>
  <ul class="navbar-nav">
    {% if app.user %}
      <li><a class="nav-link" href="{{ path('app_logout') }}"><strong>Logout</strong></a></li>
      <a href="{{ path('admin') }}"><img class="image" src="{{ asset('images/admin.png') }}" alt="Admin"></a>
    {% else %}
      <li><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
    {% endif %}
  </ul>
</nav>
    {% block body %}{% endblock %} {% block javascripts %}{% endblock %}
  </body>
</html>